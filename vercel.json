{
  "version": 2,
  "builds": [
    {
      "src": "build/web/**/*",
      "use": "@vercel/static",
      "config": {
        "distDir": "build/web",
        "cleanUrls": true
      }
    }
  ],
  "routes": [
    {
      "src": "/service_worker.js",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/.*",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-store, max-age=0",
        "Service-Worker-Allowed": "/"
      }
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}